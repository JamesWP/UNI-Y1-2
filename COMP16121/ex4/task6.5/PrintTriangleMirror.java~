public class PrintTriangleMirror
{
  public static void main(String[] args)
  {
    int size = Integer.parseInt(args[0]);
    

    for (int y = 0;y<size;y++)
    {
      for(int x = size;x>0;x--)
      { 
        System.out.print(x+y<=size?"[_]":"   ");
      }
      System.out.println();
    }
  }
}
